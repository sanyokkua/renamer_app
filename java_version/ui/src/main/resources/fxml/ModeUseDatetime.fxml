<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import ua.renamer.app.ui.widgets.view.ItemPositionWithReplacementRadioSelector?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="ua.renamer.app.ui.widgets.controllers.modes.ModeUseDatetimeController"
      prefHeight="400.0" prefWidth="600.0">

    <ItemPositionWithReplacementRadioSelector fx:id="itemPositionRadioSelector"
                                              labelValue="%mode_datetime_label_position"/>

    <GridPane VBox.vgrow="NEVER">
        <columnConstraints>
            <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="CENTER" vgrow="NEVER"/>
        </rowConstraints>

        <Label text="%mode_datetime_label_datetime_name_separator" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="datetimeAndNameSeparatorTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="%mode_datetime_label_date_format" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ChoiceBox fx:id="dateFormatChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </ChoiceBox>

        <Label text="%mode_datetime_label_time_format" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ChoiceBox fx:id="timeFormatChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </ChoiceBox>

        <Label text="%mode_datetime_label_date_time_format" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ChoiceBox fx:id="dateTimeFormatChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="3" maxWidth="Infinity">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </ChoiceBox>

        <Label text="%mode_datetime_label_time_source" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ChoiceBox fx:id="timeSourceChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="4" maxWidth="Infinity">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </ChoiceBox>

        <CheckBox fx:id="useFallbackDateTimeCheckBox" text="%mode_datetime_label_use_fallback" maxWidth="Infinity"
                  GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </CheckBox>

        <CheckBox fx:id="useCustomFallbackDateTimeCheckBox" text="%mode_datetime_label_use_fallback_custom_date"
                  maxWidth="Infinity"
                  GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </CheckBox>

        <CheckBox fx:id="useAmPmInUppercaseCheckBox" text="%mode_datetime_label_use_am_pm_in_uppercase"
                  maxWidth="Infinity"
                  GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </CheckBox>
    </GridPane>

    <HBox alignment="CENTER" maxWidth="Infinity">
        <DatePicker fx:id="datePicker"/>
        <Label text="Hour:"/>
        <Spinner fx:id="hourSpinner"/>
        <Label text="Minute:"/>
        <Spinner fx:id="minuteSpinner"/>
        <Label text="Second:"/>
        <Spinner fx:id="secondSpinner"/>
    </HBox>

</VBox>
