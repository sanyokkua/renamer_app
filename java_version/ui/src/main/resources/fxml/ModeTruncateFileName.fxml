<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import ua.renamer.app.ui.widgets.view.ItemPositionTruncateRadioSelector?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="ua.renamer.app.ui.widgets.controllers.modes.ModeTruncateFileNameController"
      prefHeight="400.0" prefWidth="600.0">

    <ItemPositionTruncateRadioSelector fx:id="itemPositionRadioSelector" labelValue="%mode_truncate_label_position"/>

    <GridPane VBox.vgrow="NEVER">
        <columnConstraints>
            <ColumnConstraints halignment="LEFT" hgrow="NEVER"/>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="CENTER" vgrow="NEVER"/>
        </rowConstraints>

        <Label text="%mode_truncate_label_amount_of_symbols" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Spinner fx:id="amountOfSymbolsSpinner" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Spinner>
    </GridPane>

</VBox>
